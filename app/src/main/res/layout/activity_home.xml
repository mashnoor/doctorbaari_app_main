<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar" />

    <com.daimajia.slider.library.SliderLayout
        android:id="@+id/slider"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/homeMenu"
        android:layout_below="@id/toolbar" />


    <LinearLayout
        android:id="@+id/homeMenu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_alignParentBottom="true"
        android:background="#00ACC1"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:orientation="horizontal"
            android:weightSum="3">


            <LinearLayout

                android:layout_width="0dp"
                android:layout_height="110dp"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/home_menu_design"
                android:elevation="8dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:onClick="goNewsFeed"
                android:orientation="vertical"
                android:padding="10dp">


                <ImageView
                    android:id="@+id/ivjobUpdate"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"

                    android:src="@drawable/job_updates" />

                <TextView
                    android:id="@+id/tvjobUpdate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Job Updates"
                    android:textColor="#5FB0BE"
                    android:textSize="12sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout

                android:layout_width="0dp"
                android:layout_height="110dp"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/home_menu_design"
                android:elevation="8dp"
                android:onClick="goPostedPermanentJobs"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="10dp">


                <ImageView
                    android:id="@+id/ivPostpermanentJob"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:layout_weight="6"
                    android:src="@drawable/post_permanent_job" />

                <TextView
                    android:id="@+id/tvPostpermanentJob"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="4"
                    android:gravity="center"
                    android:text="Post Permanent Job"
                    android:textColor="#5FB0BE"
                    android:textSize="12sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout

                android:layout_width="0dp"
                android:layout_height="110dp"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/home_menu_design"
                android:elevation="8dp"
                android:gravity="center"

                android:onClick="goSearchPermanentJob"
                android:orientation="vertical"
                android:padding="10dp">


                <ImageView
                    android:id="@+id/ivSearchPermanent"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"

                    android:src="@drawable/search_permanent_job" />

                <TextView
                    android:id="@+id/tvSearchPermanent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="Search Permanent Job"
                    android:textColor="#5FB0BE"
                    android:textSize="12sp"
                    android:textStyle="bold" />

            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:orientation="horizontal"
            android:weightSum="3">


            <LinearLayout

                android:layout_width="0dp"
                android:layout_height="110dp"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/home_menu_design"
                android:elevation="8dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:onClick="goPostSubJobs"
                android:orientation="vertical"
                android:padding="10dp">


                <ImageView
                    android:id="@+id/ivPostSubstitute"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"

                    android:src="@drawable/seach_substitute_doctor" />

                <TextView
                    android:id="@+id/tvPostSubstitute"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="Search Substitute Doctor"
                    android:textColor="#5FB0BE"
                    android:textSize="12sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout

                android:layout_width="0dp"
                android:layout_height="110dp"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/home_menu_design"
                android:elevation="8dp"
                android:gravity="center"
                android:layout_gravity="center"
                android:onClick="goSearchSubJobs"
                android:orientation="vertical"
                android:padding="10dp">


                <ImageView
                    android:id="@+id/ivSearchSubstitute"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:layout_weight="6"
                    android:src="@drawable/search_temporary_job" />

                <TextView
                    android:id="@+id/tvSearchSubstitute"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="4"
                    android:gravity="center"
                    android:text="Search Temporary Job"
                    android:textColor="#5FB0BE"
                    android:textSize="12sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout

                android:layout_width="0dp"
                android:layout_height="110dp"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/home_menu_design"
                android:elevation="8dp"
                android:gravity="center"
                android:onClick="goHospitalInquiry"
                android:orientation="vertical"
                android:padding="10dp">


                <ImageView
                    android:id="@+id/ivHospitalInquiry"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:src="@drawable/hospital_inquiry" />

                <TextView
                    android:id="@+id/tvHospitalInquiry"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="Hospital Inquiry"
                    android:textColor="#5FB0BE"
                    android:textSize="12sp"
                    android:textStyle="bold" />

            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:orientation="horizontal"
            android:weightSum="3">


            <LinearLayout

                android:layout_width="0dp"
                android:layout_height="110dp"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/home_menu_design"
                android:elevation="8dp"
                android:onClick="goAvailabilityActivity"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="10dp">


                <ImageView
                    android:id="@+id/ivAvailability"
                    android:layout_width="40dp"
                    android:layout_height="40dp"

                    android:layout_gravity="center"
                    android:src="@drawable/my_schedules" />

                <TextView
                    android:id="@+id/tvAvailability"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="Job Search History"
                    android:textColor="#5FB0BE"
                    android:textSize="12sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout

                android:layout_width="0dp"
                android:layout_height="110dp"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/home_menu_design"
                android:elevation="8dp"
                android:layout_gravity="center"
                android:onClick="goUserHelpline"
                android:gravity="center"
                android:orientation="vertical">


                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
   
                    android:src="@drawable/user_helpline" />

                <TextView
                    android:id="@+id/tvProfiles"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"

                    android:gravity="center"
                    android:text="User Helpline"
                    android:textColor="#5FB0BE"
                    android:textSize="12sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout

                android:layout_width="0dp"
                android:layout_height="110dp"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/home_menu_design"
                android:elevation="8dp"
                android:onClick="goViewHistory"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="10dp">


                <ImageView
                    android:id="@+id/lvHistory"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    
                    android:src="@drawable/history" />

                <TextView
                    android:id="@+id/tvNewMedicineUpdate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="Doctor Search History"
                    android:textColor="#5FB0BE"
                    android:textSize="12sp"
                    android:textStyle="bold" />

            </LinearLayout>


        </LinearLayout>


    </LinearLayout>


</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar" />

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">


        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin">


            <EditText
                android:id="@+id/etInstitution"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Institution Name"
                android:inputType="textPersonName" />

            <EditText
                android:id="@+id/etStartingFrom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:focusable="false"
                android:hint="Job Joining Date"
                android:inputType="textPersonName" />


            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:text="Institution Location"
                android:textColor="@color/black_bg"
                android:textSize="20dp"
                android:textStyle="bold" />


            <fragment
                android:id="@+id/place_autocomplete_fragment"
                android:name="com.google.android.gms.location.places.ui.PlaceAutocompleteFragment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center" />


            <ImageView
                android:id="@+id/ivPermanentJobImage"
                android:layout_width="100dp"
                android:layout_height="100dp" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="selectImage"
                android:padding="10dp"
                android:textColor="@android:color/white"
                android:background="@drawable/button_style"
                android:text="Upload Job Circular Photo" />


            <TextView
                android:id="@+id/textView11"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:layout_marginTop="10dp"
                android:text="Select Preferred degrees"
                android:textColor="@color/black_bg"
                android:textSize="20dp"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/textView9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="FCPS"
                android:textSize="15dp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/checkedText"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:onClick="degreeChecked"
                    android:text="FCPS Medicine" />

                <CheckBox
                    android:id="@+id/checkedText1"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:onClick="degreeChecked"
                    android:text="FCPS Surgery" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/checkedText2"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:onClick="degreeChecked"
                    android:text="FCPS Obstetrics " />

                <CheckBox
                    android:id="@+id/checkedTextGyno"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:onClick="degreeChecked"
                    android:text="FCPS Gynacology and obs" />

            </LinearLayout>


            <TextView
                android:id="@+id/textView10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:onClick="degreeChecked"
                android:text="MD/MS"
                android:textSize="15sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/checkedText3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:onClick="degreeChecked"
                    android:text="MD" />

                <CheckBox
                    android:id="@+id/checkedText4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:onClick="degreeChecked"
                    android:text="MS Surgery" />


            </LinearLayout>

            <CheckBox
                android:id="@+id/checkedText5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="degreeChecked"
                android:text="MS Gynocology and Obstatic" />


            <TextView
                android:id="@+id/textViewOther"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="OTHER"
                android:textSize="15sp"
                android:textStyle="bold" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/checkedText7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="degreeChecked"
                    android:text="MRCP" />

                <CheckBox
                    android:id="@+id/checkedText8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="degreeChecked"
                    android:text="FRCP" />

                <CheckBox
                    android:id="@+id/checkedText9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="degreeChecked"
                    android:text="MRCS" />

                <CheckBox
                    android:id="@+id/checkedText10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="degreeChecked"
                    android:text="FRCS" />

                <CheckBox
                    android:id="@+id/checkedTextFecs"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="degreeChecked"
                    android:text="FACS" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <CheckBox
                    android:id="@+id/checkedTextFcpsPart_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:onClick="degreeChecked"
                    android:text="FCPS part 2" />


                <CheckBox
                    android:id="@+id/checkedTextFcpsPart_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:onClick="degreeChecked"
                    android:text="FCPS part 1" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/checkedText11"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:onClick="degreeChecked"
                    android:text="Diploma" />

                <CheckBox
                    android:id="@+id/checkedText12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:onClick="degreeChecked"
                    android:text="M.Phil" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/checkedText13"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:onClick="degreeChecked"
                    android:text="PGT" />

                <CheckBox
                    android:id="@+id/checkedText14"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:onClick="degreeChecked"
                    android:text="FCGP" />

                <CheckBox
                    android:id="@+id/checkedText15"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:onClick="degreeChecked"
                    android:text="CCD" />

                <CheckBox
                    android:id="@+id/checkedText16"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:onClick="degreeChecked"
                    android:text="DMU" />

                <CheckBox
                    android:id="@+id/checkedText17"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:onClick="degreeChecked"
                    android:text="CMU" />


            </LinearLayout>


            <CheckBox
                android:id="@+id/checkedTextTraining"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="degreeChecked"
                android:text="CPR Training" />


            <CheckBox
                android:id="@+id/checkedTextMBbs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="degreeChecked"
                android:text="MBBS" />


            <TextView
                android:id="@+id/textView7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="Details"
                android:textColor="@color/black_bg"
                android:textSize="18sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/etDetails"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:background="@drawable/edit_text_style"

                android:hint="Write in here"
                android:inputType="textPersonName" />

            <Button
                android:id="@+id/btnPost"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:background="@drawable/button_style"
                android:onClick="goPost"
                android:text="Post"
                android:textColor="#ffffff"
                android:textStyle="bold" />


        </LinearLayout>


    </ScrollView>

</LinearLayout>